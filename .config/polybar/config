foreground-alt = ${xrdb:color7}
panel = ${colors.background}
accent = ${xrdb:accent}
background-alt = ${xrdb:backgroundAlt}

[bar/trustno1]
height = 30
fixed-center = false
width = 2532
offset-x = 14
offset-y = 5

background = ${colors.panel}
foreground = ${colors.foreground}

font-0 = Meslo LG S:pixelsize=10;1
font-1 = Material Design Icons:antialia=false:size=14;2
font-2 = Weather Icons:size=12;1

modules-left = bspwm mpd
modules-right = xkeyboard volume redshift weather date

wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-foreground = ${colors.foreground}
format-padding = 1

label-layout = %layout%

label-indicator-padding = 1
label-indicator-margin = 1

[module/bspwm]
type = internal/bspwm

ws-icon-0 = terminal;
ws-icon-1 = web;
ws-icon-2 = code;
ws-icon-3 = documents;
ws-icon-4 = chat;
ws-icon-5 = files;
ws-icon-6 = music;
ws-icon-7 = extra;
ws-icon-default =  

label-focused = %icon%
label-focused-foreground = ${colors.accent}
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

label-occupied = %icon%
label-occupied-foreground = ${colors.foreground}
label-occupied-background = ${colors.white}
label-occupied-padding = 1

label-empty = %icon%
label-empty-foreground = ${colors.foreground}
label-empty-background = ${colors.white}
label-empty-padding = 1

label-urgent = %icon%
label-urgent-foreground = ${colors.red}
label-urgent-background = ${colors.white}
label-urgent-padding = 1

[module/mpd]
type = internal/mpd
format-online = <icon-prev> <icon-stop> <toggle> <icon-next> <label-song>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 50
label-song-ellipsis = true
icon-foreground = ${colors.foreground}
format-online-background = ${colors.white}
format-online-foreground = ${colors.foreground}
format-online-padding = 1
label-song-background = ${colors.background}
label-song-foreground = ${colors.foreground}
label-song-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
label = %percentage:2%%
format-padding = 1

[module/memory]
type = internal/memory
interval = 10
format-prefix = " "
format-padding = 1
label = %gb_used%

[module/date]
type = internal/date
interval = 10

date = %a %b, %e
time = %I:%M %p

label = %{A1:chromium --app='https\://calendar.google.com/calendar/r/agenda':}%date% %time%%{A}
label-padding-right = 1
label-background = ${colors.background-alt}

[module/volume]
type = internal/volume

format-volume = <ramp-volume>
